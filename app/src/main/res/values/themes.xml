<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HelloWord" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
    </style>

    <style name="Theme.HelloWord.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
    </style>

    <style name="Theme.HelloWord.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.HelloWord.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="BottomNavigationStytle" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/sliver</item>
    </style>

    <style name="ButtonStyle" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/dogerblue</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="Theme.HelloWord.MyTheme" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
    </style>
</resources>